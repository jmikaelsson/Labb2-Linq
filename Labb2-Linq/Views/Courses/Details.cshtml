@model Labb2_Linq.Models.Course

@{
    ViewData["Title"] = "Details";
}

<h1>Information om kurs</h1>

<div>
    <div class="row">
        <h4>@Html.DisplayFor(model => model.CourseName)</h4>
        <a asp-action="Edit" asp-route-id="@Model.CourseId" class="text-decoration-none text-black-50">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
            </svg>
        </a>
    </div>
    
    <hr />

    <p>
        <a class="btn btn-outline-info" data-toggle="collapse" href="#teachers" role="button" aria-expanded="false" aria-controls="teachers">
            Lärare
        </a>
        <button class="btn btn-outline-info" type="button" data-toggle="collapse" data-target="#students" aria-expanded="false" aria-controls="students">
            Elever
        </button>
    </p>
    <div class="collapse show" id="teachers">
        <div class="card card-body">
            @if (Model.TeacherCourses?.Any() == true)
            {
                <ul>
                    @foreach (var teacherCourse in Model.TeacherCourses)
                    {
                        <li>@teacherCourse.Teacher.TeacherFirstName @teacherCourse.Teacher.TeacherLastName</li>
                    }
                </ul>
            }
            else
            {
                <p>Inga lärare tilldelade denna kurs.</p>
            }
        </div>
    </div>
    <div class="collapse" id="students">
        <div class="card card-body">
            @if (Model.StudentCourses?.Any() == true)
            {
                <ul>
                    @foreach (var studentCourse in Model.StudentCourses)
                    {
                        <li>@studentCourse.Student.StudentFirstName @studentCourse.Student.StudentLastName</li>
                    }
                </ul>
            }
            else
            {
                <p>Inga studenter tilldelade denna kurs.</p>
            }
        </div>
    </div>
</div>


<div class="mt-md-5">
    <a class="text-decoration-none text-black-50" asp-action="Index">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5" />
        </svg> 
        Tillbaka
    </a>
</div>
