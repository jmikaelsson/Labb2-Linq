@model Labb2_Linq.Models.Teacher

@{
    ViewData["Title"] = "Edit";
}

<h1>Redigera</h1>
<hr />
<div class="row">
    <h6>Lärare</h6>
    <h4>@Html.DisplayFor(model => model.TeacherFirstName) @Html.DisplayFor(model => model.TeacherLastName)</h4>
    <div class="col-md-4 mt-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TeacherId" />
            <div class="form-group">
                <label asp-for="TeacherFirstName" class="control-label"></label>
                <input asp-for="TeacherFirstName" class="form-control" />
                <span asp-validation-for="TeacherFirstName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="TeacherLastName" class="control-label"></label>
                <input asp-for="TeacherLastName" class="form-control" />
                <span asp-validation-for="TeacherLastName" class="text-danger"></span>
                <input type="submit" value="Save" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

    <div class="mt-md-5 mb-lg-5">
        <a class="text-decoration-none text-black-50" asp-action="Index">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5" />
            </svg>
            Tillbaka
        </a>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
